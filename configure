#!/usr/bin/env python3

# Build-API compatible wrapper around waf.
# Supposed to be used only by flatpak builder.

import sys, os, subprocess

waf = ["python3", "./waf", "distclean", "configure"]
prefix="/usr/local"

for arg in sys.argv[1:]:
	try:
		name, value = arg.split("=", 1)
	except ValueError:
		name, value = arg, None
	if arg.startswith("!-"):
		waf.append(arg[1:])
	elif name == "--libdir":
		waf.append(arg)
	elif name == "--prefix":
		waf.append(arg)
		prefix = value
	elif name in ("CFLAGS", "CXXFLAGS"):
		os.environ[name] = value
	else:
		print("Warning: Unknown argument: ", arg)

print(waf)
subprocess.check_call(waf)

makefile = """
DESTDIR ?= /
all:
	python3 ./waf build -v
install:
	python3 ./waf install --no-system-hooks --destdir="$(DESTDIR)"
.NOTPARALLEL:
"""

with open("Makefile", "wt") as f:
	f.write(makefile)
